@model BibliotekaStandardowPDF.Models.Dokument
@{
    ViewData["Title"] = "Create";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
<h4>Utwórz dokument</h4>
<hr />

<div class="row">
    <div class="col-md-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Temat" class="control-label"></label>
                <input asp-for="Temat" class="form-control" />
                <span asp-validation-for="Temat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tresc" class="control-label"></label>
                <input asp-for="Tresc" id="summernote" />
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <script src="~/lib/summernote-0.8.18-dist/summernote-bs4.js"></script>

    <script>
        $(document).ready(function () {
            $('#summernote').summernote(
            );
        });
    </script>
    <script>
        $('#summernote').val($('#summernote').Code());
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}